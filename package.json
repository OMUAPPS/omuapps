{
    "name": "omuapps",
    "type": "module",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/OMUAPPS/omuapps.git"
    },
    "workspaces": [
        "packages-js/*"
    ],
    "private": true,
    "scripts": {
        "build": "node ./scripts/js-build.mjs",
        "build-i18n": "node scripts/js-i18n.mjs",
        "build-site": "node ./scripts/js-build.mjs --build site",
        "build-tauri": "node ./scripts/js-build.mjs --build dash",
        "clean": "node ./scripts/js-clean.mjs",
        "dev": "node ./scripts/js-dev.mjs",
        "fix": "pnpm -r fix",
        "lint": "pnpm -r lint"
    },
    "devDependencies": {
        "@types/node": "^22.1.0",
        "ajv": "^8.17.1",
        "axios": "^1.7.3",
        "execa": "^9.3.0",
        "lerna": "^8.1.8",
        "depcheck": "^1.4.7",
        "typescript": "^5.5.4"
    },
    "pnpm": {
        "overrides": {
            "string-width": "4",
            "strip-ansi": "6",
            "wrap-ansi": "7"
        }
    }
}
