{
    "name": "omuapps",
    "type": "module",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/OMUAPPS/omuapps.git"
    },
    "workspaces": [
        "packages-js/*"
    ],
    "private": true,
    "scripts": {
        "prepare": "bun ./scripts/js-patch.ts",
        "wrangler": "wrangler",
        "build": "bun ./scripts/js-build.ts",
        "build-site": "bun run --cwd packages-js/site build",
        "build-tauri": "bun run --cwd packages-js/dash build",
        "publish": "bun ./scripts/js-publish.ts",
        "clean": "bun ./scripts/js-clean.ts",
        "eslint": "eslint"
    },
    "devDependencies": {
        "@actions/github": "^6.0.1",
        "@eslint/compat": "^2.0.0",
        "@eslint/js": "^9.39.1",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@sveltejs/package": "2.5.4",
        "@types/bun": "1.3.2",
        "@types/eslint": "^9.6.1",
        "@types/node": "^24.10.1",
        "bun-plugin-isolated-decl": "^0.2.8",
        "eslint": "^9.39.1",
        "eslint-plugin-svelte": "3.13.0",
        "glob": "^13.0.0",
        "globals": "16.5.0",
        "jiti": "^2.6.1",
        "lerna": "^9.0.1",
        "nodemon": "^3.1.11",
        "oxc-transform": "^0.98.0",
        "svelte-eslint-parser": "^1.4.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.47.0",
        "unplugin-isolated-decl": "^0.15.6",
        "wrangler": "4.49.0"
    }
}
