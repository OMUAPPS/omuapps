{
    "name": "omuapps",
    "type": "module",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/OMUAPPS/omuapps.git"
    },
    "workspaces": [
        "packages-js/*"
    ],
    "private": true,
    "scripts": {
        "prepare": "bun ./scripts/js-patch.ts",
        "wrangler": "wrangler",
        "build": "bun ./scripts/js-build.ts",
        "build-i18n": "node scripts/js-i18n.mjs",
        "build-site": "node ./scripts/js-build.mjs --build site",
        "build-tauri": "node ./scripts/js-build.mjs --build dash",
        "clean": "bun ./scripts/js-clean.ts",
        "dev": "bun ./scripts/js-dev.ts",
        "eslint": "eslint",
        "fix": "eslint fix",
        "lint": "eslint lint"
    },
    "devDependencies": {
        "@actions/github": "^6.0.0",
        "@types/bun": "^1.2.6",
        "@types/eslint": "^9.6.0",
        "@sveltejs/package": "2.3.10",
        "ajv": "^8.17.1",
        "axios": "^1.7.3",
        "bun-plugin-isolated-decl": "^0.1.10",
        "depcheck": "^1.4.7",
        "eslint": "^9.9.1",
        "eslint-plugin-svelte": "3.3.3",
        "execa": "^9.3.0",
        "glob": "^11.0.0",
        "globals": "16.0.0",
        "jiti": "^2.4.2",
        "lerna": "^8.1.8",
        "oxc-transform": "^0.61.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "8.28.0",
        "wrangler": "4.4.0"
    },
    "pnpm": {
        "overrides": {
            "string-width": "4",
            "strip-ansi": "6",
            "wrap-ansi": "7"
        }
    }
}
