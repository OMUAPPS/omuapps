{
    "name": "omuapps",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build-tauri": "node ./scripts/js-build.mjs --build dash",
        "build-site": "node ./scripts/js-build.mjs --build site",
        "build-i18n": "node scripts/js-i18n.mjs",
        "dev": "node ./scripts/js-build.mjs && node ./scripts/js-dev.mjs",
        "build": "node ./scripts/js-build.mjs",
        "lint": "pnpm -r lint",
        "fix": "pnpm -r fix",
        "clean": "node ./scripts/js-clean.mjs"
    },
    "workspaces": [
        "packages-js/*"
    ],
    "devDependencies": {
        "execa": "^9.3.0",
        "lerna": "^8.1.6",
        "license-checker": "^25.0.1",
        "axios": "^1.7.2",
        "ajv": "^8.16.0"
    },
    "pnpm": {
        "overrides": {
            "string-width": "4",
            "strip-ansi": "6",
            "wrap-ansi": "7"
        }
    }
}
