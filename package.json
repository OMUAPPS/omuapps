{
    "name": "dashboard",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "tauri": "tauri",
        "dev": "set RUST_BACKTRACE=1 && tauri dev",
        "watch": "concurrently \"npx lerna run watch --stream --parallel\" \"npm run dev\"",
        "prepare": "svelte-kit sync && node script/setup.mjs && npx lerna run build",
        "build": "tauri build",
        "ui:dev": "vite --host 0.0.0.0 --port 26420",
        "ui:build": "vite build",
        "ui:preview": "vite preview",
        "ui:check": "svelte-check --tsconfig ./tsconfig.json",
        "lint:stylelint": "stylelint --ignore-path .gitignore ./**/*.{css,svelte}",
        "fix:stylelint": "stylelint --fix --ignore-path .gitignore ./**/*.{css,svelte}",
        "lint:eslint": "eslint . --ext .ts,.svelte --ignore-path .gitignore",
        "fix:eslint": "eslint . --ext .ts,.svelte --fix --ignore-path .gitignore",
        "lint": "npm run lint:stylelint && npm run lint:eslint",
        "fix": "npm run fix:stylelint && npm run fix:eslint"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@fontsource/noto-sans-jp": "^5.0.17",
        "@sveltejs/adapter-static": "^2.0.3",
        "@sveltejs/kit": "^1.27.5",
        "@sveltejs/vite-plugin-svelte": "^2.5.2",
        "@tabler/icons-webfont": "^2.40.0",
        "@tauri-apps/api": "^1.4.0",
        "@tauri-apps/cli": "^1.5.6",
        "@tsconfig/svelte": "^5.0.0",
        "@types/node": "^20.11.2",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "axios": "^1.6.0",
        "concurrently": "^8.2.2",
        "csstype": "^3.1.2",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-svelte": "^2.35.1",
        "eslint-plugin-unused-imports": "^3.0.0",
        "lerna": "^8.0.2",
        "license-checker": "^25.0.1",
        "postcss-html": "^1.5.0",
        "prettier": "^3.0.3",
        "prettier-plugin-svelte": "^3.1.0",
        "qrious": "^4.0.2",
        "sass": "^1.68.0",
        "stylelint": "^15.11.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-prettier": "8.0.2",
        "stylelint-config-recess-order": "^4.3.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "sugarss": "^4.0.1",
        "svelte": "^4.0.5",
        "svelte-check": "^3.4.6",
        "tslib": "^2.6.0",
        "typescript": "^5.3.3",
        "vite": "^4.5.0",
        "vitest": "^0.34.0"
    }
}