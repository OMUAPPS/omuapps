{
    "name": "omuapps",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build-tauri": "node ./scripts/js-build.mjs --build tauri",
        "build-site": "node ./scripts/js-build.mjs --build site",
        "dev": "node ./scripts/js-build.mjs && node ./scripts/js-dev.mjs",
        "build": "node ./scripts/js-build.mjs",
        "lint": "pnpm -r lint",
        "fix": "pnpm -r fix",
        "clean": "node ./scripts/js-clean.mjs"
    },
    "workspaces": [
        "packages-js/*"
    ],
    "devDependencies": {
        "execa": "^9.3.0",
        "lerna": "^8.1.5",
        "license-checker": "^25.0.1"
    },
    "resolutions": {
        "lerna/**/string-width": "4",
        "lerna/**/strip-ansi": "6",
        "lerna/**/wrap-ansi": "7"
    }
}