{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prelaunch",
            "type": "shell",
            "command": "rye run prelaunch",
            "isBackground": false,
            "problemMatcher": "$vite",
        },
        {
            "label": "dash",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python ./scripts/py-dev.py --dash",
            "dependsOn": ["prelaunch", "dev-package-index"],
        },
        {
            "label": "apps",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python ./scripts/py-dev.py --apps",
            "dependsOn": ["prelaunch", "dev-package-index"],
        },
        {
            "label": "dev-package-index",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python ./scripts/py-upload-dev-index.py",
            "dependsOn": ["prelaunch"],
        },
        {
            "label": "prepare",
            "dependsOn": ["prelaunch", "dev-package-index", "dev"],
        },
        {
            "label": "prepare-without-dash",
            "dependsOn": ["prelaunch", "dev-package-index", "apps"],
        }
    ]
}
