{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prelaunch",
            "type": "shell",
            "command": "rye run prelaunch",
            "isBackground": false,
            "problemMatcher": [],
        },
        {
            "label": "dev-dash",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python",
            "args": [
                "./scripts/py-dev.py",
                "--dash"
            ],
            "dependsOn": [
                "prelaunch",
                "dev-package-index"
            ],
            "problemMatcher": [
                {
                    "applyTo": "allDocuments",
                    "pattern": {
                        "regexp": "Starting",
                    },
                    "background": {
                        "beginsPattern": "Starting",
                        "endsPattern": "Starting"
                    },
                },
            ],
        },
        {
            "label": "dev-apps",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python",
            "args": [
                "./scripts/py-dev.py",
                "--apps"
            ],
            "dependsOn": [
                "prelaunch",
                "dev-package-index"
            ],
            "problemMatcher": [
                {
                    "applyTo": "allDocuments",
                    "pattern": {
                        "regexp": "Starting",
                    },
                    "background": {
                        "beginsPattern": "Starting",
                        "endsPattern": "Starting"
                    },
                },
            ],
        },
        {
            "label": "dev-package-index",
            "type": "shell",
            "isBackground": true,
            "command": "${workspaceFolder}/.venv/Scripts/python ./scripts/py-upload-dev-index.py",
            "problemMatcher": [
                {
                    "applyTo": "allDocuments",
                    "pattern": {
                        "regexp": "starting",
                    },
                    "background": {
                        "beginsPattern": "starting",
                        "endsPattern": "Listening"
                    }
                }
            ]
        },
    ]
}
