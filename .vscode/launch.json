{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "dev"
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--debug",
                "--token-file",
                "${workspaceFolder}/appdata/token.txt",
                "--extra-trusted-origin",
                "localhost:5173"
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
        },
        {
            "name": "Server (stop)",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--stop",
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Development Debug",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=./packages-js/dash/src-tauri/Cargo.toml",
                    "--no-default-features"
                ]
            },
            // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
            "preLaunchTask": "dev"
        },
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Server",
                "Client"
            ],
            "preLaunchTask": "prelaunch",
            "stopAll": true
        }
    ],
}
