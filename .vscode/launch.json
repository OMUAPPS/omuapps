{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dashboard",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "dev-dash"
        },
        {
            "name": "Apps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "dev-apps"
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--debug",
                "--token-file",
                "${workspaceFolder}/appdata/token.txt",
                "--hash",
                "dev",
                "--extra-trusted-origin",
                "localhost:5173"
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
        },
        {
            "name": "Server (stop)",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--stop",
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
        },
        {
            "name": "Server (uninstall)",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--uninstall",
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "DashboardDebug",
            "cwd": "${workspaceFolder}/packages-js/dash/src-tauri",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=./packages-js/dash/src-tauri/Cargo.toml",
                    "--no-default-features"
                ]
            },
        },
    ],
    "compounds": [
        {
            "name": "Dashboard Debugging",
            "configurations": [
                "Server",
                "Apps",
                "DashboardDebug",
            ],
            "preLaunchTask": "prelaunch",
            "presentation": {
                "group": "Main",
                "order": 0,
            },
        },
        {
            "name": "Dashboard and Sever Debugging",
            "configurations": [
                "Apps",
                "DashboardDebug",
            ],
            "preLaunchTask": "prelaunch",
            "presentation": {
                "group": "Main",
                "order": 1,
            },
        },
        {
            "name": "All",
            "configurations": [
                "Server",
                "Apps",
                "Dashboard",
            ],
            "preLaunchTask": "prelaunch",
            "presentation": {
                "group": "Main",
                "order": 2,
            },
        },
    ],
}
