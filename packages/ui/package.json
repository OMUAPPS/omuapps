{
    "name": "@omuchatjs/ui",
    "version": "0.1.18",
    "repository": {
        "type": "git",
        "url": "https://github.com/OMUCHAT/omuchat"
    },
    "scripts": {
        "prepare": "svelte-kit sync",
        "dev": "vite dev --port 5174",
        "watch": "svelte-package --watch",
        "build": "vite build && pnpm run package",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "prepublishOnly": "pnpm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "chromatic": "chromatic"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "@omuchatjs/chat": "workspace:*",
        "@omuchatjs/i18n": "workspace:*",
        "@omuchatjs/omu": "workspace:*",
        "@sveltejs/kit": "^2.5.4",
        "svelte": "^4.0.0"
    },
    "dependencies": {
        "@tabler/icons-webfont": "^3.2.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "1.3.3",
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@storybook/addon-essentials": "^8.0.9",
        "@storybook/addon-interactions": "^8.0.9",
        "@storybook/addon-links": "^8.0.9",
        "@storybook/blocks": "^8.0.9",
        "@storybook/svelte": "^8.0.9",
        "@storybook/sveltekit": "^8.0.9",
        "@storybook/test": "^8.0.9",
        "@sveltejs/adapter-auto": "^3.2.0",
        "@sveltejs/package": "^2.3.1",
        "@sveltejs/vite-plugin-svelte": "^3.1.0",
        "@types/eslint": "^8.56.10",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "chromatic": "^11.3.0",
        "csstype": "^3.1.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-storybook": "^0.8.0",
        "eslint-plugin-svelte": "^2.38.0",
        "esm-env": "^1.0.0",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.2.3",
        "publint": "^0.2.7",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "storybook": "^8.0.9",
        "svelte": "^4.2.15",
        "svelte-check": "^3.6.9",
        "tslib": "^2.6.2",
        "typescript": "^5.4.5",
        "vite": "^5.2.10",
        "vitest": "^1.5.2"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module"
}
