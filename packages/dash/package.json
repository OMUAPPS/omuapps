{
    "name": "dash",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "prepare": "svelte-kit sync",
        "tauri": "tauri",
        "dev": "tauri dev",
        "build": "pnpm run build-pre && tauri build",
        "build-pre": "node ./scripts/build-pre.mjs",
        "ui:dev": "vite --host 0.0.0.0 --port 26420",
        "ui:build": "vite build",
        "ui:preview": "vite preview",
        "ui:check": "svelte-check --tsconfig ./tsconfig.json",
        "ui:check-watch": "pnpm run ui:check --watch",
        "lint:stylelint": "stylelint --ignore-path .gitignore ./**/*.{css,svelte}",
        "fix:stylelint": "stylelint --fix --ignore-path .gitignore ./**/*.{css,svelte}",
        "lint:eslint": "eslint . --ext .ts,.svelte --ignore-path .gitignore --ignore-pattern '**/*.d.ts'",
        "fix:eslint": "eslint . --ext .ts,.svelte --fix --ignore-path .gitignore",
        "lint:prettier": "prettier --check .",
        "fix:prettier": "prettier --write .",
        "lint": "pnpm run lint:stylelint && pnpm run lint:eslint && pnpm run lint:prettier",
        "fix": "pnpm run fix:stylelint && pnpm run fix:eslint && pnpm run format:prettier"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@omuchatjs/chat": "workspace:*",
        "@omuchatjs/i18n": "workspace:*",
        "@omuchatjs/omu": "workspace:*",
        "@omuchatjs/ui": "workspace:*",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/kit": "^2.5.7",
        "@sveltejs/vite-plugin-svelte": "^3.1.0",
        "@tauri-apps/api": "^1.5.4",
        "@tauri-apps/cli": "^1.5.12",
        "@tsconfig/svelte": "^5.0.4",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "axios": "^1.6.8",
        "csstype": "^3.1.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-svelte": "^2.38.0",
        "eslint-plugin-unused-imports": "^3.1.0",
        "esm-env": "^1.0.0",
        "postcss-html": "^1.6.0",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.2.3",
        "qrious": "^4.0.2",
        "sass": "^1.75.0",
        "stylelint": "^16.4.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^5.0.1",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "sugarss": "^4.0.1",
        "svelte": "^4.2.15",
        "svelte-check": "^3.6.9",
        "tslib": "^2.6.2",
        "typescript": "^5.4.5",
        "vite": "^5.2.10",
        "vitest": "^1.5.2"
    },
    "dependencies": {
        "svelte-markdown": "^0.4.1"
    }
}
