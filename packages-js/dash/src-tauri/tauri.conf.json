{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm run ui:build",
        "beforeDevCommand": "pnpm run ui:dev",
        "devPath": "http://localhost:26420/",
        "distDir": "../build"
    },
    "package": {
        "productName": "OMUAPPS",
        "version": "0.7.7"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true,
                "setAlwaysOnTop": true,
                "create": true,
                "setFocus": true,
                "setSize": true
            },
            "process": {
                "relaunch": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.omuapps.app",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "nsis": {
                    "installerIcon": "icons/icon.ico",
                    "languages": [
                        "Arabic",
                        "Bulgarian",
                        "Dutch",
                        "English",
                        "French",
                        "German",
                        "Japanese",
                        "Korean",
                        "PortugueseBR",
                        "SimpChinese",
                        "Spanish",
                        "SpanishInternational",
                        "Swedish",
                        "TradChinese",
                        "Turkish"
                    ]
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/OMUAPPS/omuapps/releases/latest/download/latest.json"
            ],
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI1NTg0NTQyNkYyRTE3OTUKUldTVkZ5NXZRa1ZZdGRKVEJ2YnFiZ3V1NWx3S0J4QlAvYXFoOHpiMkYvL3IySjdwNVJqL2EyTVgK",
            "windows": {
                "installMode": "passive"
            }
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "width": 1280,
                "height": 720,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "decorations": false,
                "title": "OMUAPPS"
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        }
    }
}
