{
    "private": true,
    "type": "module",
    "name": "dash",
    "version": "0.0.0",
    "scripts": {
        "build": "bun run build-pre && tauri build",
        "build-pre": "bun ./scripts/build-pre.ts",
        "dev": "tauri dev",
        "dev-release": "tauri dev --release --no-dev-server",
        "prepare": "bun x --bun svelte-kit sync",
        "tauri": "tauri",
        "vite": "vite",
        "ui:build": "bun x --bun vite build",
        "ui:check": "bun x --bun svelte-check --tsconfig ./tsconfig.json",
        "ui:check-watch": "nodemon --verbose --watch src --ext \"ts,svelte\" --exec \"bun x --bun svelte-check --tsconfig ./tsconfig.json\"",
        "ui:dev": "bun x --bun vite --host 0.0.0.0",
        "ui:preview": "bun x --bun vite preview"
    },
    "devDependencies": {
        "@fontsource/noto-sans-jp": "5.0.19",
        "@humanspeak/svelte-markdown": "^0.8.13",
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@omujs/ui": "workspace:*",
        "@sveltejs/adapter-static": "3.0.10",
        "@sveltejs/kit": "2.48.5",
        "@sveltejs/vite-plugin-svelte": "6.2.1",
        "@tabler/icons-webfont": "^3.19.0",
        "@tauri-apps/api": "2.9.0",
        "@tauri-apps/cli": "2.9.3",
        "@tauri-apps/plugin-cli": "^2.4.1",
        "@tauri-apps/plugin-fs": "2.4.4",
        "@tauri-apps/plugin-log": "^2.7.1",
        "@tauri-apps/plugin-opener": "2.5.2",
        "@tauri-apps/plugin-process": "2.3.1",
        "@tauri-apps/plugin-updater": "2.9.0",
        "@tsconfig/svelte": "5.0.4",
        "@types/dom-speech-recognition": "^0.0.7",
        "@types/license-checker": "25.0.6",
        "esm-env": "1.0.0",
        "license-checker": "25.0.1",
        "sass": "^1.86.0",
        "sugarss": "4.0.1",
        "svelte": "5.43.12",
        "svelte-check": "^4.3.3",
        "svelte-markdown": "0.4.1",
        "tslib": "2.6.3",
        "vite": "7.2.2",
        "vitest": "2.0.5"
    }
}
