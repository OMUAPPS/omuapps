{
    "type": "module",
    "name": "@omujs/ui",
    "version": "0.9.49",
    "main": "./dist/index.js",
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "svelte": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/*/index.d.ts",
            "import": "./dist/*/index.js",
            "svelte": "./dist/*/index.js"
        }
    },
    "scripts": {
        "build": "bun run package",
        "check": "bun x --bun svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "nodemon --verbose --watch src --ext \"ts,svelte\" --exec \"bun x --bun svelte-check --tsconfig ./tsconfig.json\"",
        "chromatic": "chromatic",
        "dev": "bun x --bun vite dev --port 5174",
        "package": "bun x --bun svelte-package && bun x --bun publint",
        "prepare": "bun x --bun svelte-kit sync",
        "prepublishOnly": "bun run package",
        "preview": "bun x --bun vite preview",
        "test": "vitest",
        "watch": "bun x --bun svelte-package --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OMUAPPS/omuapps.git"
    },
    "devDependencies": {
        "@fontsource/noto-sans-jp": "^5.2.8",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/package": "^2.5.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tabler/icons-webfont": "^3.35.0",
        "chromatic": "^13.3.4",
        "esm-env": "^1.2.2",
        "publint": "^0.3.15",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "sass": "^1.94.2",
        "svelte": "^5.43.12",
        "svelte-check": "^4.3.4",
        "tslib": "^2.8.1",
        "vite": "^7.2.4",
        "vitest": "^4.0.10"
    },
    "peerDependencies": {
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/obs": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@sveltejs/kit": "^2.49.2",
        "svelte": "^5.46.0"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "!dist/**/*.stories.*"
    ]
}
