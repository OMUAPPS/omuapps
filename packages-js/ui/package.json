{
    "name": "@omujs/ui",
    "version": "0.4.9",
    "repository": {
        "type": "git",
        "url": "https://github.com/OMUAPPS/omuapps"
    },
    "scripts": {
        "prepare": "svelte-kit sync",
        "dev": "vite dev --port 5174",
        "watch": "nodemon -w src -e svelte,ts --exec \"pnpm run package && pnpm run check\"",
        "build": "vite build && pnpm run package",
        "preview": "vite preview",
        "package": "svelte-package && publint",
        "prepublishOnly": "pnpm run package",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "test": "vitest",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "chromatic": "chromatic"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@sveltejs/kit": "^2.5.4",
        "svelte": "^4.0.0"
    },
    "dependencies": {
        "@tabler/icons-webfont": "^3.7.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "1.5.0",
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@storybook/addon-essentials": "^8.1.10",
        "@storybook/addon-interactions": "^8.1.10",
        "@storybook/addon-links": "^8.1.10",
        "@storybook/blocks": "^8.1.10",
        "@storybook/svelte": "^8.1.10",
        "@storybook/sveltekit": "^8.1.10",
        "@storybook/test": "^8.1.10",
        "@sveltejs/adapter-auto": "^3.2.2",
        "@sveltejs/package": "^2.3.2",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@types/eslint": "^8.56.10",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "chromatic": "^11.5.4",
        "csstype": "^3.1.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-storybook": "^0.8.0",
        "eslint-plugin-svelte": "^2.41.0",
        "esm-env": "^1.0.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "prettier-plugin-svelte": "^3.2.5",
        "publint": "^0.2.8",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "storybook": "^8.1.10",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.3",
        "tslib": "^2.6.3",
        "typescript": "^5.5.2",
        "vite": "^5.3.1",
        "vitest": "^1.6.0"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module"
}
