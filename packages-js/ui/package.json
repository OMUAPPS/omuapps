{
    "type": "module",
    "name": "@omujs/ui",
    "version": "0.9.36",
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "bun run package",
        "build-storybook": "storybook build",
        "check": "bun x --bun svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "nodemon --verbose --watch src --ext \"ts,svelte\" --exec \"bun x --bun svelte-check --tsconfig ./tsconfig.json\"",
        "chromatic": "chromatic",
        "dev": "bun x --bun vite dev --port 5174",
        "package": "bun x --bun svelte-package && bun x --bun publint",
        "prepare": "bun x --bun svelte-kit sync",
        "prepublishOnly": "bun run package",
        "preview": "bun x --bun vite preview",
        "storybook": "storybook dev -p 6006",
        "test": "vitest",
        "watch": "bun x --bun svelte-package --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OMUAPPS/omuapps.git"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "1.6.1",
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@storybook/addon-essentials": "^8.2.8",
        "@storybook/addon-interactions": "^8.2.8",
        "@storybook/addon-links": "^8.2.8",
        "@storybook/blocks": "^8.2.8",
        "@storybook/svelte": "^8.2.8",
        "@storybook/sveltekit": "^8.2.8",
        "@storybook/test": "^8.2.8",
        "@sveltejs/adapter-auto": "^3.2.2",
        "@sveltejs/package": "^2.3.2",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@tabler/icons-webfont": "^3.30.0",
        "chromatic": "^11.7.0",
        "esm-env": "^1.0.0",
        "publint": "^0.2.9",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "sass": "^1.86.0",
        "storybook": "^8.2.8",
        "svelte": "^4.2.18",
        "svelte-check": "^4.3.3",
        "tslib": "^2.6.3",
        "vite": "^5.4.0",
        "vitest": "^2.0.5"
    },
    "peerDependencies": {
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/obs": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@sveltejs/kit": "^2.5.4",
        "svelte": "^4.0.0"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "!dist/**/*.stories.*"
    ]
}
