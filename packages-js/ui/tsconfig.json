{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "es2020",
        "lib": ["es2020"],
        "target": "es2019",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "bundler",
        "types": ["svelte"]
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
}
