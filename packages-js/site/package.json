{
    "name": "site",
    "private": true,
    "version": "0.0.1",
    "scripts": {
        "prepare": "svelte-kit sync",
        "dev": "vite dev --port 5173",
        "build": "pnpm run build-pre && vite build",
        "build-pre": "node ./scripts/build-pre.mjs",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write ."
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.7.0"
    },
    "devDependencies": {
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@fontsource/rocknroll-one": "^5.0.14",
        "@neoconfetti/svelte": "^2.2.1",
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/obs": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@omujs/ui": "workspace:*",
        "@sveltejs/adapter-cloudflare": "4.7.0",
        "@sveltejs/kit": "2.5.20",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@types/dom-speech-recognition": "^0.0.4",
        "@types/eslint": "9.6.0",
        "@types/pako": "^2.0.3",
        "@types/youtube": "^0.0.50",
        "@typescript-eslint/eslint-plugin": "^8.0.1",
        "@typescript-eslint/parser": "^8.0.1",
        "buffer": "^6.0.3",
        "csstype": "^3.1.3",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.43.0",
        "esm-env": "^1.0.0",
        "pako": "^2.1.0",
        "postcss-html": "^1.7.0",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.6",
        "sass": "^1.77.8",
        "stylelint": "^16.8.1",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^5.0.1",
        "stylelint-config-standard": "^36.0.1",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.5",
        "svelte-markdown": "^0.4.1",
        "tslib": "^2.6.3",
        "typescript": "^5.5.4",
        "vite": "^5.4.0",
        "vitest": "^2.0.5"
    },
    "type": "module"
}