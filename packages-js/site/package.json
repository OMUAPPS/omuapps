{
    "private": false,
    "type": "module",
    "name": "site",
    "version": "0.0.1",
    "scripts": {
        "build": "bun run build-pre && bun x --bun vite build",
        "build-pre": "bun ./scripts/build-pre.ts",
        "check": "bun x --bun svelte-kit sync && bun x --bun svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "nodemon --verbose --watch src --ext \"ts,svelte\" --exec \"bun x --bun svelte-check --tsconfig ./tsconfig.json\"",
        "dev": "bun build-pre && bun x --bun vite dev",
        "prepare": "bun x --bun svelte-kit sync",
        "preview": "bun x --bun vite preview",
        "test": "vitest"
    },
    "devDependencies": {
        "@2ji-han/kuromoji.js": "^0.1.8",
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@fontsource/rocknroll-one": "^5.0.14",
        "@humanspeak/svelte-markdown": "^0.8.13",
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/obs": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@omujs/ui": "workspace:*",
        "@sveltejs/adapter-cloudflare": "7.2.4",
        "@sveltejs/kit": "2.48.5",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tabler/icons-webfont": "^3.19.0",
        "@types/dom-speech-recognition": "^0.0.4",
        "@types/dom-webcodecs": "^0.1.13",
        "@types/pako": "^2.0.3",
        "@types/seedrandom": "^3.0.8",
        "@types/youtube": "0.1.2",
        "buffer": "^6.0.3",
        "domhandler": "^5.0.3",
        "esm-env": "^1.0.0",
        "htmlparser2": "^10.0.0",
        "pako": "^2.1.0",
        "postcss-html": "^1.7.0",
        "qrious": "^4.0.2",
        "sass": "^1.86.0",
        "seedrandom": "^3.0.5",
        "svelte": "^5.43.12",
        "svelte-check": "^4.3.4",
        "svelte-highlight": "^7.9.0",
        "tslib": "^2.6.3",
        "vite": "^7.2.2",
        "vitest": "^2.0.5"
    }
}
