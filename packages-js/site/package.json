{
    "private": true,
    "type": "module",
    "name": "site",
    "version": "0.0.1",
    "scripts": {
        "build": "pnpm run build-pre && vite build",
        "build-pre": "node ./scripts/build-pre.mjs",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev --port 5173",
        "prepare": "svelte-kit sync",
        "preview": "vite preview",
        "test": "vitest",
        "lint": "eslint .",
        "fix": "eslint . --fix"
    },
    "devDependencies": {
        "@fontsource/noto-sans-jp": "^5.0.19",
        "@fontsource/rocknroll-one": "^5.0.14",
        "@neoconfetti/svelte": "^2.2.1",
        "@omujs/chat": "workspace:*",
        "@omujs/i18n": "workspace:*",
        "@omujs/obs": "workspace:*",
        "@omujs/omu": "workspace:*",
        "@omujs/ui": "workspace:*",
        "@sveltejs/adapter-cloudflare": "4.7.0",
        "@sveltejs/kit": "2.5.20",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@types/dom-speech-recognition": "^0.0.4",
        "@types/pako": "^2.0.3",
        "@types/youtube": "^0.0.50",
        "@omujs/eslint-config": "workspace:*",
        "eslint": "^9.0.0",
        "buffer": "^6.0.3",
        "esm-env": "^1.0.0",
        "pako": "^2.1.0",
        "postcss-html": "^1.7.0",
        "sass": "^1.77.8",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.5",
        "svelte-markdown": "^0.4.1",
        "tslib": "^2.6.3",
        "vite": "^5.4.0",
        "vitest": "^2.0.5"
    }
}
